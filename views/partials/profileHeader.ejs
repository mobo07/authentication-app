<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Authentication App</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&family=Open+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <script
      defer
      src="https://kit.fontawesome.com/8209583a32.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="css/style.css" />
    <script defer src="js/profile.js"></script>
  </head>
  <body>
    <nav class="profile-nav">
      <img src="assets/devchallenges.svg" alt="nav-logo" class="nav-logo" />
      <div class="profile-photo">
        <% if((profilePhoto.contentType !== undefined && profilePhoto.data !==
        undefined)) { %>
        <img
          src="data:<%=profilePhoto.contentType%>;base64,<%=profilePhoto.data.toString('base64')%>"
          alt="avatar"
        />
        <% } else if((profilePhoto.contentType === undefined &&
        profilePhoto.data === undefined) && picture !== undefined) { %>
        <img src="<%= picture %>" alt="avatar" />
        <% } else { %>
        <i class="far fa-user"></i>
        <% } %>
      </div>
      <div class="drop-down">
        <li class="drop-down-item"><i class="far fa-user"></i>My profile</li>
        <li class="drop-down-item"><i class="fa fa-users"></i>Group Chat</li>
        <hr class="drop-down-hr" />
        <li class="drop-down-item logout-btn">
          <i class="fa fa-sign-out"></i><a href="/logout">Logout</a>
        </li>
      </div>
    </nav>
    <%- include("messages") -%>
  </body>
</html>
